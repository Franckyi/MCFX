{
  "schemaVersion": 1,
  "id": "mcfx",
  "version": "${version}",
  "name": "MCFX",
  "description": "A client-side GUI API inspired by TornadoFX",
  "authors": [
    "Franckyi"
  ],
  "contact": {
    "homepage": "https://github.com/Franckyi/MCFX",
    "sources": "https://github.com/Franckyi/MCFX",
    "issues": "https://github.com/Franckyi/MCFX/issues"
  },
  "license": "MIT",
  "icon": "assets/mcfx/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "dev.franckyi.mcfx.fabric.MCFXModFabric"
      }
    ]
  },
  "mixins": [
    "mcfx.mixins.json",
    "mcfx-common.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "architectury": ">=4.4.59",
    "fabric-language-kotlin": ">=1.7.4+kotlin.1.6.21"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/upWJQGd"
      },
      "badges": [
        "library",
        "client"
      ]
    }
  }
}